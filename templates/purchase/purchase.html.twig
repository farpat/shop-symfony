{% extends "_layouts/app.html.twig" %}

{% block title %}
    {% trans %}Purchase{% endtrans %}
{% endblock %}

{% block script 'cart-purchase' %}

{% block javascripts %}
    <script src="https://js.stripe.com/v3"></script>
    {{ parent() }}
{% endblock %}


{% block body %}
    <main class="container-fluid">
        <h1>{% trans %}Purchase{% endtrans %}</h1>

        <div class="row paypal-row">
            <section id="purchase-cart" class="col-lg">
            </section>

            <section class="col-lg-4">
                <h2>{% trans %}Payment by credit card{% endtrans %}</h2>
                <div id="stripe-component" data-public-key="{{ stripePublicKey }}"
                     data-success-url="{{ successfulPaymentUrl }}"></div>
            </section>
        </div>
    </main>
{% endblock %}