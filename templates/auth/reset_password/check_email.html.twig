{% extends '_layouts/app.html.twig' %}

{% block title %}{% trans %}Password Reset Email Sent{% endtrans %}{% endblock %}

{% block body %}
    <section class="container mt-4">
        <p>
            An email has been sent that contains a link that you can click to reset your password. This link will expire
            in {{ tokenLifetime|date('g') }} hour(s)
        </p>
        <p>
            If you don't receive an email please check your spam folder or <a
                    href="{{ path('reset-password.forgot_password_request') }}">try again</a>
        </p>
    </section>
{% endblock %}
